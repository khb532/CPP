{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C++ Build (g++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-std=c++17",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "focus": false
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
